{
  "compileOnSave": true,
  "compilerOptions": {
    // Target latest version of ECMAScript.
    "target": "es6",
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node",
    // "resolveJsonModule": true,
    // Process & infer types from .js files.
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
